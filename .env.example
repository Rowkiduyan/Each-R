# Copy to `.env` and fill with your project values.
# Get these from Supabase Dashboard → Project Settings → API

VITE_SUPABASE_URL="https://<project-ref>.supabase.co"
VITE_SUPABASE_ANON_KEY="<anon-public-key>"

# Site URL for password reset and email redirects
# Use http://localhost:5173 for local development
# Use your production URL for deployment
VITE_SITE_URL="http://localhost:5173"

# Optional (DANGEROUS): service role key for local scripts only.
# Never use this in browser/client code. Keep it out of git.
SUPABASE_SERVICE_ROLE_KEY="<service-role-key>"

# Optional: edge function endpoint(s)
VITE_SCHEDULE_FN="https://<project-ref>.supabase.co/functions/v1/<function-name>"
